        <Label Content="Message Body" Grid.Column="1" HorizontalAlignment="Left" Margin="10,376,0,0" VerticalAlignment="Top"/>
        <TextBox Grid.Column="1" Name="msgTextBox" HorizontalAlignment="Left" Height="60" Margin="10,402,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="157"/>
