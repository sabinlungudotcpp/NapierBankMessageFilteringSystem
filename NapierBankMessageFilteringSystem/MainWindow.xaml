        <ListBox Grid.Column="1" HorizontalAlignment="Left" Height="60" Margin="242,402,0,0" VerticalAlignment="Top" Width="207" RenderTransformOrigin="0.49,0.301"/>
        <Button Content="Read File" Name="readFileBtn" Grid.Column="1" HorizontalAlignment="Left" Margin="242,484,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="URL Quarantine List
" Grid.Column="1" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top"/>
        <ListBox Grid.Column="1" Name="quarantineListBox" HorizontalAlignment="Left" Height="73" Margin="10,76,0,0" VerticalAlignment="Top" Width="142"/>
        <Label Content="Mentions" Grid.Column="1" HorizontalAlignment="Left" Margin="205,45,0,0" VerticalAlignment="Top"/>
