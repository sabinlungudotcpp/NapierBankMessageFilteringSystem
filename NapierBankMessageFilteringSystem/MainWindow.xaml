<Window x:Class="NapierBankMessageFilteringSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NapierBankMessageFilteringSystem"
        mc:Ignorable="d"
        Title="Napier Bank Message Filtering Service" Height="650" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="173*"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="1" Name="msgHeaderTxtBox" HorizontalAlignment="Left" Height="23" Margin="547,347,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="157" RenderTransformOrigin="0.494,-0.049"/>
        <Label Content="Message Header" Grid.Column="1" HorizontalAlignment="Left" Margin="547,321,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.323,0.66"/>
        <Label Content="Message Body" Grid.Column="1" HorizontalAlignment="Left" Margin="547,392,0,0" VerticalAlignment="Top"/>
        <TextBox Grid.Column="1" Name="msgTextBox" HorizontalAlignment="Left" Height="60" Margin="547,423,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="157"/>
        <Button Content="Process Message" Name="processMsgButton" Grid.Column="1" HorizontalAlignment="Left" Margin="547,506,0,0" VerticalAlignment="Top" Width="98" Click="processMsgButton_Click"/>
        <ListBox HorizontalAlignment="Left" Height="139" Margin="36,199,0,0" VerticalAlignment="Top" Width="245" RenderTransformOrigin="0.49,0.301" Grid.ColumnSpan="2"/>
        <Button Content="Read File" Name="readFileBtn" HorizontalAlignment="Left" Margin="36,361,0,0" VerticalAlignment="Top" Width="118" RenderTransformOrigin="0.803,-0.445" Grid.ColumnSpan="2" Height="23" Click="readFileBtn_Click"/>
        <Label Content="URL Quarantine List
" HorizontalAlignment="Left" Margin="59,45,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <ListBox Name="quarantineListBox" HorizontalAlignment="Left" Height="73" Margin="57,76,0,0" VerticalAlignment="Top" Width="142" Grid.ColumnSpan="2"/>
        <Label Content="Mentions" Grid.Column="1" HorizontalAlignment="Left" Margin="180,45,0,0" VerticalAlignment="Top"/>
        <ListBox Grid.Column="1" Name="mentionsListBox" HorizontalAlignment="Left" Height="73" Margin="151,76,0,0" VerticalAlignment="Top" Width="136"/>
        <Label Content="SIR List" Grid.Column="1" HorizontalAlignment="Left" Margin="369,45,0,0" VerticalAlignment="Top"/>
        <ListBox Grid.Column="1" HorizontalAlignment="Left" Height="73" Margin="350,76,0,0" VerticalAlignment="Top" Width="152"/>
        <Label Content="Trending List" Grid.Column="1" HorizontalAlignment="Left" Margin="547,45,0,0" VerticalAlignment="Top"/>
        <ListBox Grid.Column="1" HorizontalAlignment="Left" Height="73" Margin="547,76,0,0" VerticalAlignment="Top" Width="147"/>
        <Label Content="Message ID" Grid.Column="1" HorizontalAlignment="Left" Margin="232,208,0,0" VerticalAlignment="Top"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="232,239,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Sender" Grid.Column="1" HorizontalAlignment="Left" Margin="232,271,0,0" VerticalAlignment="Top"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="232,302,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Text" Grid.Column="1" HorizontalAlignment="Left" Margin="232,330,0,0" VerticalAlignment="Top"/>
        <TextBox Grid.Column="1" Name="textField" HorizontalAlignment="Left" Height="60" Margin="232,361,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="145"/>

    </Grid>
</Window>
