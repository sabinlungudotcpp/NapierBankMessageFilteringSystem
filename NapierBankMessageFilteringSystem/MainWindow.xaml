<Window x:Class="NapierBankMessageFilteringSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NapierBankMessageFilteringSystem"
        mc:Ignorable="d"
        Title="Napier Bank Message Filtering Service" Height="650" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="173*"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="1" Name="msgHeaderTxtBox" HorizontalAlignment="Left" Height="76" Margin="547,195,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="178" RenderTransformOrigin="0.494,-0.049"/>
        <Label Content="Message Header" Grid.Column="1" HorizontalAlignment="Left" Margin="547,164,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.323,0.66"/>
        <Label Content="Message Body" Grid.Column="1" HorizontalAlignment="Left" Margin="547,287,0,0" VerticalAlignment="Top"/>
        <TextBox Grid.Column="1" Name="msgTextBox" HorizontalAlignment="Left" Height="80" Margin="547,327,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="168"/>
        <Button Content="Process Message" Name="processMsgButton" Grid.Column="1" HorizontalAlignment="Left" Margin="585,426,0,0" VerticalAlignment="Top" Width="98" Click="processMsgButton_Click"/>
        <ListBox HorizontalAlignment="Left" Name="messageListBox" Height="139" Margin="36,182,0,0" VerticalAlignment="Top" Width="245" RenderTransformOrigin="0.49,0.301" Grid.ColumnSpan="2" SelectionChanged="messageListBox_SelectionChanged"/>
        <Button Content="Read File" Name="readFileBtn" HorizontalAlignment="Left" Margin="81,345,0,0" VerticalAlignment="Top" Width="118" RenderTransformOrigin="0.803,-0.445" Grid.ColumnSpan="2" Height="23" Click="readFileBtn_Click"/>
        <Label Content="URL Quarantine List
" HorizontalAlignment="Left" Margin="59,45,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <ListBox Name="quarantineListBox" HorizontalAlignment="Left" Height="73" Margin="57,76,0,0" VerticalAlignment="Top" Width="142" Grid.ColumnSpan="2"/>
        <Label Content="Mentions List" Grid.Column="1" HorizontalAlignment="Left" Margin="151,45,0,0" VerticalAlignment="Top"/>
        <ListBox Grid.Column="1" Name="mentionsListBox" HorizontalAlignment="Left" Height="73" Margin="151,76,0,0" VerticalAlignment="Top" Width="136"/>
        <Label Content="SIR List" Grid.Column="1" HorizontalAlignment="Left" Margin="369,45,0,0" VerticalAlignment="Top"/>
        <ListBox Grid.Column="1" HorizontalAlignment="Left" Height="73" Margin="350,76,0,0" VerticalAlignment="Top" Width="152"/>
        <Label Content="Trending List" Grid.Column="1" HorizontalAlignment="Left" Margin="547,45,0,0" VerticalAlignment="Top"/>
        <ListBox Grid.Column="1" HorizontalAlignment="Left" Height="73" Margin="547,76,0,0" VerticalAlignment="Top" Width="147"/>
        <TextBox Grid.Column="1" Name="messageID" HorizontalAlignment="Left" Height="73" Margin="220,182,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="249"/>
        <TextBox Grid.Column="1" Name="messageSender" HorizontalAlignment="Left" Height="74" Margin="220,287,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="249"/>
        <TextBox Grid.Column="1" Name="messageText" HorizontalAlignment="Left" Height="73" Margin="220,396,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="249"/>
        <Label Content="Message ID :" Name="messageIdLbl" Grid.Column="1" HorizontalAlignment="Left" Margin="222,205,0,0" VerticalAlignment="Top"/>
        <Label Content="Message Sender :" Name="messageSenderLbl" Grid.Column="1" HorizontalAlignment="Left" Margin="220,314,0,0" VerticalAlignment="Top"/>
        <Label Content="Message Text :" Name = "messageTextLbl" Grid.Column="1" HorizontalAlignment="Left" Margin="221,420,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
